                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Вільність: {0}">
                                    <Binding Path="getAvailability"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
