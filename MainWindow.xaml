<Window x:Class="TransDep_AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransDep_AdminApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="720" Width="1080"
        MinHeight="720" MinWidth="1080"
        SizeToContent="WidthAndHeight"
        DataContext="{Binding 
        RelativeSource={RelativeSource Self}}">
    
    <Grid Name="layoutGrid" 
          Height="710" Width="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="650"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <ListBox x:Name="listBox"
                 ItemsSource="{Binding trucks}"
                 Height="625"
                 Margin="10,10,10,10" 
                 FontSize="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        
                        <TextBlock Text="{Binding getName, Mode=OneWay}" FontWeight="Bold"/>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Вантажопідйомність: {0} тонн | Місткість: {1} європаллета | Корисний обсяг: {2} м.куб.">
                                    <Binding Path="getCarryingCapacity"/>
                                    <Binding Path="getCapacity"/>
                                    <Binding Path="getUsefulVolume"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}Вільність: {0}">
                                    <Binding Path="getAvailability"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="aboutTruck" Header="Info about truck" Click="OpenWindow"/>
                    <MenuItem Header="Delete" Click="RemoveTruck"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

        <Canvas Grid.Row="0" Grid.Column="1" 
                Width="690" Height="625"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Background="#FFB5B5B5" 
                Margin="0,10,0,0">
            <!--<Grid Name="parkingGrid" Height="630" Width="690" Background="#FFC8B6B6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
            </Grid>-->
        </Canvas>

        <Button Name="newTruck"
                Click = "OpenWindow"
                Content="Add New Truck" 
                HorizontalAlignment="Left"  
                VerticalAlignment="Top" 
                Width="110" Height="45" 
                Margin="10,5,0,0"
                Grid.Row="1" Grid.Column="0"/>

        <TextBox x:Name="version" Text="0" 
            Background="{x:Null}" 
            BorderBrush="{x:Null}" 
            SelectionBrush="{x:Null}" 
            SelectionTextBrush="{x:Null}" 
            Foreground="#3F000000" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Bottom" 
            Height="20" Width="100" 
            FontFamily="Courier New" FontSize="16" 
            Margin="0,0,10,10" 
            IsReadOnly="True"
            IsHitTestVisible="false"
            Grid.Column="2" Grid.Row="1"/>
    </Grid>
</Window>
